{
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "target": "ESNext",
        "noImplicitAny": true,
        "module": "ES2022",
        "outDir": "./dist",
        "baseUrl": "./src",
        "lib": ["esnext"],
        "resolveJsonModule": true,
        "moduleResolution": "Bundler",
        "isolatedModules": true
    },
    "include": ["src/**/*.ts", "src/**/.*.ts"],
    "exclude": ["node_modules"]
}
