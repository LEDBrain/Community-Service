{
    "name": "community-service",
    "version": "0.1.0",
    "description": "A Discord bot in Typescript",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "start": "concurrently -n BOT,API -c \"bgBlue.white,bgGreen.white\" \"npm run start-bot\" \"npm run start-api\"",
        "start-bot": "cross-env NODE_ENV=production && node dist/index.js",
        "dev-bot": "cross-env NODE_ENV=development && ts-node src/index.ts",
        "dev-bot:hot": "cross-env NODE_ENV=development && ts-node-dev --ignore-watch src/api --respawn --transpile-only  src/index.ts",
        "start-api": "cross-env NODE_ENV=production && node dist/api/server.js",
        "dev-api": "cross-env NODE_ENV=development && ts-node src/api/server.ts",
        "dev-api:hot": "cross-env NODE_ENV=development && ts-node-dev --respawn --transpile-only  src/api/server.ts",
        "dev:hot": "concurrently -n BOT,API -c \"bgBlue.white,bgGreen.white\" \"npm run dev-bot:hot\" \"npm run dev-api:hot\"",
        "lint": "prettier --write 'src/**/*.ts' && eslint --fix . --ext .ts",
        "commit": "cz",
        "semantic-release": "semantic-release",
        "migrate:prod": "prisma migrate deploy",
        "test:api": "lab --typescript -v"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/LEDBrain/Community-Service.git"
    },
    "author": "LEDBrain <opensource@ledbrain.de>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/LEDBrain/Community-Service/issues"
    },
    "homepage": "https://github.com/LEDBrain/Community-Service#readme",
    "dependencies": {
        "@discordjs/builders": "^0.12.0",
        "@discordjs/rest": "^0.3.0",
        "@hapi/hapi": "^20.2.1",
        "@prisma/client": "^3.12.0",
        "concurrently": "^7.1.0",
        "cross-env": "^7.0.3",
        "discord-api-types": "^0.31.0",
        "discord.js": "^13.6.0",
        "dotenv": "^16.0.0"
    },
    "devDependencies": {
        "@hapi/code": "^8.0.7",
        "@hapi/lab": "^24.6.0",
        "@semantic-release/git": "^10.0.1",
        "@tsconfig/node16": "^1.0.2",
        "@types/hapi__hapi": "^20.0.10",
        "@types/ms": "^0.7.31",
        "@typescript-eslint/eslint-plugin": "^5.18.0",
        "@typescript-eslint/parser": "^5.18.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.12.0",
        "prettier": "^2.6.2",
        "prisma": "^3.12.0",
        "semantic-release": "^19.0.2",
        "ts-node": "^10.7.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.6.3"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "publishConfig": {
        "access": "restricted"
    },
    "release": {
        "branches": [
            "main"
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/github",
            "@semantic-release/git"
        ]
    }
}
