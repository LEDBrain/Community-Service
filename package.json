{
    "name": "change-me",
    "version": "1.0.0",
    "description": "A Discord bot in Typescript",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "start": "cross-env NODE_ENV=production && node dist/index.js",
        "dev": "cross-env NODE_ENV=development && ts-node src/index.ts",
        "dev:hot": "cross-env NODE_ENV=development && ts-node-dev --respawn --transpile-only src/index.ts",
        "lint": "prettier --write 'src/**/*.ts' && eslint --fix . --ext .ts",
        "commit": "cz"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/LEDBrain/discord-bot-typescript-template.git"
    },
    "author": "LEDBrain <opensource@ledbrain.de>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/LEDBrain/discord-bot-typescript-template/issues"
    },
    "homepage": "https://github.com/LEDBrain/discord-bot-typescript-template#readme",
    "dependencies": {
        "@discordjs/builders": "^0.12.0",
        "@discordjs/rest": "^0.3.0",
        "@prisma/client": "^3.10.0",
        "discord-api-types": "^0.27.3",
        "discord.js": "^13.6.0",
        "dotenv": "^16.0.0"
    },
    "devDependencies": {
        "@tsconfig/node16": "^1.0.2",
        "@types/ms": "^0.7.31",
        "@typescript-eslint/eslint-plugin": "^5.12.1",
        "@typescript-eslint/parser": "^5.12.1",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.9.0",
        "prettier": "^2.5.1",
        "prisma": "^3.10.0",
        "ts-node": "^10.5.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.5.5"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
