{
    "name": "community-service",
    "version": "1.3.7",
    "description": "A Discord bot in Typescript",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "start": "cross-env NODE_ENV=production && node dist/index.js",
        "dev": "cross-env NODE_ENV=development && ts-node src/index.ts",
        "dev:hot": "cross-env NODE_ENV=development && ts-node-dev --respawn --transpile-only src/index.ts",
        "lint": "prettier --write \"src/**/*.ts\" && eslint --fix . --ext .ts",
        "lint:prettier": "prettier --write \"src/**/*.ts\"",
        "lint:eslint": "eslint . --ext .ts",
        "commit": "cz",
        "semantic-release": "semantic-release",
        "migrate:prod": "prisma migrate deploy",
        "test:api": "lab --typescript -v",
        "typesafe-i18n": "typesafe-i18n --no-watch",
        "typesafe-i18n:watch": "typesafe-i18n",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/LEDBrain/Community-Service.git"
    },
    "author": "LEDBrain <opensource@ledbrain.de>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/LEDBrain/Community-Service/issues"
    },
    "homepage": "https://github.com/LEDBrain/Community-Service#readme",
    "dependencies": {
        "@discordjs/rest": "^1.6.0",
        "@hapi/hapi": "^21.3.0",
        "@prisma/client": "^4.11.0",
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3",
        "discord-api-types": "^0.37.36",
        "discord.js": "^14.8.0",
        "dotenv": "^16.0.3",
        "joi": "^17.8.4",
        "typesafe-i18n": "^5.24.2"
    },
    "devDependencies": {
        "@hapi/code": "^9.0.3",
        "@hapi/iron": "^7.0.0",
        "@hapi/lab": "^25.1.2",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/npm": "^9.0.2",
        "@tsconfig/node16": "^1.0.3",
        "@types/hapi__catbox": "^10.2.4",
        "@types/ms": "^0.7.31",
        "@types/node": "^18.15.3",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.36.0",
        "husky": "^8.0.3",
        "prettier": "^2.8.5",
        "prisma": "^4.11.0",
        "semantic-release": "^20.1.1",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.0.2"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "publishConfig": {
        "access": "restricted"
    }
}
